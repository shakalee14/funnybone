extends layout

block content

  .section-inventory

  .section-inventory
    include navbar.pug

  .section-inventory
    include searchform.pug

  .section
    p=message
  .section-inventory
    ul
      for result in results
        li
          .inventory-item
            img(class="inventory-pic" src=`./images/inventorypic/${result.img}`)
            p #{result.name}
            .details(data-id=`${result.id}`) details
        .inventory-details-modal(data-id=`${result.id}`)
          include details-modal.pug
