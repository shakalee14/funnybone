extends layout

block content
  
  .section
    include searchform.pug

    .section
      p=message
    .section-inventory
      ul
        for result in results
          li
            .inventory-item
              img(class="inventory-pic" src=`./images/inventorypic/${result.img}`)
              p #{result.name}
              .details(data-id=`${result.id}`) details
          .inventory-details-modal(data-id=`${result.id}`)
            h1 #{result.name}
            p #{result.description}
            p #{result.cost}
            img(class="inventory-pic-modal" src=`./images/inventorypic/${result.img}`)
            p #{result.quantity} currently available
            a(href=`mailto:funnybonedesign@gmail.com?subject=Inquiring about ${result.name}`) Email Us
            p.close X
