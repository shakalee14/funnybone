extends layout

block content

  .section
    include navbar.pug
  .section
    h1 All Inventory

    form(method='GET', action='/search' name='searchItem')
      input(type='text' placeholder='Looking for...')

  .section-inventory
    ul
      for result in results
        li
          .inventory-item
            img(class="inventory-pic" src=`./images/inventorypic/${result.img}`)
            p #{result.name}
            .details(data-id=`${result.id}`) details
        .inventory-details-modal(data-id=`${result.id}`)
          include details-modal.pug
